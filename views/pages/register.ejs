<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link rel="stylesheet" id="styles" type="text/css" href="/css/light.css" />
  <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet"
    type="text/css" />
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous">
  </script>
</head>

<body>
  <header><%- include ('../partial/header', {loggedName}, {loggedNameAdmin}) %></header>

  <div class="box_register">
    <!--Logo-->
    <img class="logo_register" src="/icon/logo_light_mode.svg" alt="Logo Sport ID" />
    <!--Sub Judul-->
    <p class="kal_satu">Daftarkan akun Sport ID mu disini!</p>
    <form action="/register" method="post">
      <!--Kolom Nama-->
      <input class="form-content" placeholder="Nama Depan" type="text" name="firstName" autocomplete="on" required />
      <input class="form-content" placeholder="Nama Belakang" type="text" name="lastName" autocomplete="on" required />
      <!--Kolom Email-->
      <input id="user-email" class="form-content" placeholder="Email" type="email" name="email" autocomplete="on"
        required />
      <!--Kolom No Hp-->
      <input id="user-nohp" class="form-content" placeholder="No Hp" type="text" name="phoneNumber" autocomplete="on"
        required />
      <!--Kolom Password-->
      <div class="container">
        <span onclick="togglePass()">
          <i class="fa fa-eye-slash" id="eye"></i>
        </span>
        <input type="password" autocomplete="off" placeholder="Password" class="password" name="password" />
        <p class="karakter">Kata sandi minimal 8 karakter berisi angka dan huruf</p>
        <p class="admin">*Khusus Admin</p>
      </div>
      <!--Kolom Kode Unik-->
      <div class="cek">
        <label for="user-kodeunik"> Kode Unik </label>
        <input id="user-kodeunik" class="form-content baru" type="text" name="kodeunik" />

        <!--Kolom Check Box-->
        <input class="pic-checkbox" type="checkbox" />
        <span class="setuju">Saya setuju dengan <strong><a href="///" class=""
              style="font-weight: 600; font-size: 10px; line-height: 12px; font-style: normal; color: #5b75eb">Syarat
              dan Ketentuan </a></strong> yang berlaku
        </span>
      </div>

      <!--Button Register-->
      <input id="tombolregister" type="submit" name="submit" value="Register" />
    </form>
    <!--kemarin
      <input id="submit-btn-register" type="submit" name="submit" value="Register" />
      -->
    <br />
    <div>
      <!--Apabila sudah punya akun-->
      <p class="loginn">
        Sudah punya akun?<span> <a href="login" style="font-size: 16px; color: #5b75eb"> Log In</a></span>
      </p>
    </div>
  </div>

  <!--Toggle Password on click-->
  <script src="js/register.js"></script>

  <footer><%- include ('../partial/footer') %></footer>
</body>

<!--Dark Mode-->
<script src="http://code.jquery.com/jquery-1.8.3.min.js"></script>

<script>
  let flag = true;
  $('#moon_light').click(function () {
    // Switching between light and dark mode
    if (flag) {
      flag = false;
      $('#moon_light').attr('src', '/icon/moon_ic_dark.svg');
      $('link#styles').attr('href', '/css/dark.css');
      $('.logo_register').attr('src', '/icon/logo_dark_mode.svg');
    } else {
      flag = true;
      $('#moon_light').attr('src', '/icon/moon_ic_light.svg');
      $('link#styles').attr('href', '/css/light.css');
      $('.logo_register').attr('src', '/icon/logo_light_mode.svg');
    }
  });

  $('.logo').click(function () {
    window.location.href = '/' /* requesting redirect page on logo click */
  })

  $('.logo-footer').click(function () {
    window.location.href = '/' /* requesting redirect page on logo click */
  })

  $('.login-button').click(function () {
    window.location.href = '/login'
    return false
  })

  $('.register-button').click(function () {
    window.location.href = '/register'
    return false
  })
</script>

</html>