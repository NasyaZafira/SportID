<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">
</head>
<body>
                <h1 style="text-align: center;">Tabel Berita</h1>
                <a href="/admin/upload" type="button" class="btn btn-primary">Add Data</a>
                <br />
                <br />
                <!-- <%# if (message) { %>
                    <div class="alert alert-success fade show alert-<%# message.type %>" role="alert">
                        <button class="close" type="button" data-dismiss="alert"
                        aria-label="Close"></button>
                        <strong><%# message.message %></strong>
                    </div>
                <%# } %> -->
                    <% if (dbBerita != ':id') { %>
                        <table class="table table-striped text-center" style="width: 100%;">
                            <thead class="thead-dark">
                                <tr>
                                    <th>ID</th>
                                    <th>Image</th>
                                    <th>Judul</th>
                                    <th>Isi</th>
                                    <th>Kategori</th>
                                    <th>Author</th>
                                    <th>CreatedAt</th>
                                    <th>UpdatedAt</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                <% dbBerita.forEach((row) => { %>
                                    <tr>
                                        <td><%= row.id %></td>
                                        <td><img src="/images/<%= row.imageBerita %>" style="width: 100px;"></td>
                                        <td><%= row.judulBerita %></td>
                                        <td style="text-align: justify;"><%= row.isiBerita %></td>
                                        <td><%= row.kategori %></td>
                                        <td><%= row.admin_name %></td>
                                        <td><%= row.createdAt %></td>
                                        <td><%= row.updatedAt %></td>
                                        <td>
                                            <a href="/admin/update/<%= row.id %>" type="button" class="btn btn-success btn-sm">Edit</a>
                                            <a href="/admin/delete/<%= row.id %>" type="button" class="btn btn-danger btn-sm">Hapus</a>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    <% } else { %>
                        <h1 class="text-center text-secondary mt-5">Berita tidak ditemukan di database!</h1>
                    <% } %>
           
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>