<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css" 
    integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn" crossorigin="anonymous">

    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
    <style type="text/css">
        body {
            background: #2c2c2c;
        }
    </style>
    <title>Update Berita</title>
</head>
<body>
    <div class="container">
        <h1 class="mb-4 text-white">Update Berita</h1>

        <form action="/admin/success/<%= Berita.id %>" method="POST" enctype="multipart/form-data">
            <div class="form-group">

                <label for="title" class="text-white">Title</label>
                <input type="text" class="form-control" name="judul" value="<%= Berita.judulBerita %>" required>
            </div>

            <div class="form-group">
                <label for="author" class="text-white">Author</label>
                <select class="form-control" name="author" required>
                    <% dbAdmin.forEach(rows => { %>
                    <option><%= rows.nama %></option>
                    <% }) %>
                </select>
            </div>

            <div class="form=group">
                <label for="kategori" class="text-white">Kategori</label>
                <input type="text" class="form-control" name="kategori" value="<%= Berita.kategori %>" required>
            </div>
            
            <div class="form-group">
                <label for="description" class="text-white">Description</label>
                <textarea name="isi" class="form-control" value="" required><%= Berita.isiBerita %></textarea>
            </div>
            <div class="form-group">
                <label for="image" class="text-white">Upload image</label>
                <input type="file" name="imageBeritaUpdate" id="image" class="form-control-file text-white">
            </div>
            <div class="form-group">
                <label for="updatedAt" class="text-white">Update Date</label>
                <input type="text" name="updatedAt" class="form-control" value="<%= Berita.updatedAt %>" required>
            </div>

            <div class="form=group">
                <label for="isTranding" class="text-white">Trending</label>
                <select name="trending">
                    <option value="True">True</option>
                    <option value="False">False</option>
                </select>
            </div>

            <div class="form-group">
                <a href="/admin" class="btn btn-warning">Cancel</a>
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </form>
    </div>
</body>
</html>