<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" id="styles" type="text/css" href="/css/admin-profil.css">
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet"
        type="text/css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">
</head>

<body>
    <div class="sidebar">
        <div class="logo-sidebar" onclick="logo()"></div>
        <div class="bar">
            <a href="/admin" class="bar-item bar-button">Profile</a>
            <a href="/admin/list-user" class="bar-item bar-button">User</a>
            <a href="/admin/list-berita" class="bar-item bar-button">News</a>
            <a href="/logout" class="bar-item bar-button">Logout</a>
        </div>
    </div>
    <div class="profil-admin">
        <div class="nama-admin">
            <!-- butuh request nama admin -->
            Halo, <%= Admin.nama %>
        </div>
        <form action="/admin/update" method="post">
            <div class="admin">Admin</div>
            <div class="isi-1">
                <div class="kolom-1">
                    <div class="akun">
                        <div class="akun-2">Akun</div>
                        <div class="edit"><a href="">Edit</a></div>
                    </div>
                    <div class="data">
                        <div class="row">
                            <div class="nama-email">
                                <div class="nama">Nama</div>
                                <div class="kolom-nama">
                                    <div class="col">
                                        <input type="text" class="form-control" name="name" placeholder="Nama Lengkap"
                                            value="<%= Admin.nama %>" required>
                                    </div>
                                    <!-- <div class="nama-lengkap">
                                    butuh request nama lengkap admin
                                    Nama lengkap
                                    <div class="form-group">
                                        
                                    </div>
                                </div> -->
                                </div>
                                <div class="nama">Email</div>
                                <div class="kolom-nama">
                                    <div class="col">
                                        <input type="text" class="form-control" name="email" placeholder="Email"
                                           pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$" value="<%= Admin.email %>" required>
                                    </div>
                                    <!-- <div class="nama-lengkap">
                                     butuh request email admin
                                    Alamatemail@gmail.com
                                </div> -->
                                </div>
                            </div>
                        </div>
                        <div class="nama-email">
                            <div class="nama">Nomor Ponsel</div>
                            <div class="kolom-nama">
                                <div class="col">
                                    <input type="text" class="form-control" name="nomorHp" value="<%= Admin.nomorHp %>"
                                        required>
                                </div>
                                <!-- <div class="nama-lengkap">
                                    
                                    0877777
                                </div> -->
                            </div>
                            <div class="nama">Kata Sandi</div>
                            <div class="kolom-sandi" onclick="togglePass()">
                                <div class="col">
                                    <input type="password" class="form-control" name="password"
                                        autocomplete="current-password" id="id_password">
                                </div>
                                <!-- <i class="fa fa-eye-slash" id="eye" style="cursor: pointer;"></i> -->

                                <i class="far fa-eye" id="togglePassword"></i>
                                <!-- <input type="password" autocomplete="off" placeholder="Password" class="password" /> -->
                                <!-- <div class="nama-lengkap">sandi123</div>
                                <div class="hidden"></div> -->
                            </div>
                        </div>
                    </div>
                </div>
                <div class="kolom-2">
                    <div class="biru">
                        <div class="kuantitas">
                            <!-- butuh request banyaknya berita yang sudah diposting oleh admin itu -->
                            <%= dbBerita.length %>
                        </div>
                        <div class="berita">
                            <div class="postingan-laporan">Postingan berita</div>
                            <div class="detail"><a href="">Lihat detail</a> </div>
                        </div>
                    </div>
                    <div class="merah">
                        <div class="kuantitas">
                            <!-- butuh request banyaknya laporan berita -->
                            <%= dbLaporan.length %>
                        </div>
                        <div class="berita">
                            <div class="postingan-laporan">Laporan berita</div>
                            <div class="detail"><a href="">Lihat detail</a> </div>
                        </div>
                    </div>
                </div>

            </div>
            <div class="isi-2">
                <div class="tabel-informasi">
                    <div class="akun-2">Informasi</div>
                    <div class="edit"> <a href="">Edit</a></div>
                </div>
                <div class="data-2">
                    <div class="nama">Alamat</div>
                    <div class="kolom-alamat">
                        <div class="col">
                            <input type="text" class="form-control" name="alamat"
                                placeholder="Jl. Mizu Gg. Konohagakure, RT.01/RW.01" value="<%= Admin.alamat %>">
                        </div>

                    </div>
                    <div class="alamat">
                        <div class="kec-prov">
                            <div class="nama">Kecamatan</div>
                            <div class="kolom-kecamatan">
                                <div class="col">
                                    <input type="text" class="form-control" name="kecamatan" placeholder="Otogakure"
                                        value="">
                                </div>

                            </div>
                            <div class="nama">Provinsi</div>
                            <div class="kolom-kecamatan">
                                <div class="col">
                                    <input type="text" class="form-control" name="provinsi" placeholder="Sunagakure"
                                        value="">
                                </div>
                            </div>
                        </div>
                        <div class="kec-prov">
                            <div class="nama">Kota / Kabupaten</div>
                            <div class="kolom-kecamatan">
                                <div class="col">
                                    <input type="text" class="form-control" name="kota" placeholder="Kirigakure">
                                </div>
                            </div>
                            <div class="nama">Kode Pos</div>
                            <div class="kolom-kecamatan">
                                <div class="col">
                                    <input type="text" class="form-control" name="kodepos" placeholder="123321">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-primary"
                style="margin-left: 55px; margin-top: 25px; width: 100px;">Update</button>
        </form>
    </div>
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>
<script>
    const togglePassword = document.querySelector('#togglePassword');
    const password = document.querySelector('#id_password');

    togglePassword.addEventListener('click', function (e) {
        // toggle the type attribute
        const type = password.getAttribute('type') === 'password' ? 'text' : 'password';
        password.setAttribute('type', type);
        // toggle the eye slash icon
        this.classList.toggle('fa-eye-slash');
    });
</script>
<script>
    function logo() {
        window.location.href = '/'
    }
</script>

</html>