<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" id="styles" type="text/css" href="/css/light.css">
</head>

<header>
    <%- include('../partial/header', {loggedName}, {loggedNameAdmin}) %>
</header>

<body>
    <div class="homepage">
        <div class="flex-container-2">
            <div class="home-kategori">
                <!-- a href untuk kembali ke homepage -->
                <a href="/">Home</a> > <span style="color: #5B75EB;">Angkat Besi</span>
            </div>
            <% berita.slice(0, 1).forEach(angkatbesi=> { %>
                <div class="flex-item-2-1">
                    <!-- <%# ini butuh request thumbnail %> -->
                    <a href="/details/<%= angkatbesi.id %>"><img style="width: 796px; height: 437px;" src="<%= angkatbesi.imageBerita %>"></a>
                </div>
                <div class="flex-item-2-2">
                    <div class="flex-item-2-2-1">
                        <!-- <%# ini butuh request judul %> -->
                        <a href="/details/<%= angkatbesi.id %>">
                            <%= angkatbesi.judulBerita %>
                        </a>
                    </div>
                    <div class="flex-item-2-2-2">
                        <div class="sepak-bola">
                            <!-- <%# ini butuh request kategori berita di "angkat besi" nya %> -->
                            <a href="/angkatbesi"><span style="color:#5B75EB">Angkat Besi</span></a> | Sport
                        </div>
                        <div class="tanggal">
                            <!-- <%# ini butuh request tanggal dan jam upload berita %> -->
                            <%= angkatbesi.updatedAt %>
                        </div>
                    </div>
                </div>
                <% }) %>
        </div>

        <div class="edusport">
            <p class="font-1">Edu-Sport News</p>
            <% berita.slice(0, 4).forEach(angkatbesi=> { %>
                <div class="edunews">
                    <div class="thumbnail-edu">
                        <%# ini butuh request thumbnail %>
                            <img style="width: 126px; height: 77px;" src="<%= angkatbesi.imageBerita %>">
                    </div>
                    <div class="berita-edu">
                        <div class="edu-judul-berita">
                            <!-- <%# ini butuh request judul %> -->
                                <a href="/details/<%= angkatbesi.id %>">
                                    <%= angkatbesi.judulBerita %>
                                </a>
                        </div>
                        <div class="edu-jenis-berita">
                            <!-- <%# ini butuh request kategori %> -->
                                <a href="/angkatbesi" class="font-2">Angkat Besi</a>
                        </div>
                    </div>
                </div>
                <% }) %>
        </div>
    </div>

    <div class="homepage-2">
        <div class="bagian-berita">
            <div class="trending-section">
                <div class="judul-trending">Trending</div>
                <div class="berita-trending">
                    <% beritaTrend.slice(0, 3).forEach(angkatbesi=> { %>
                        <div class="kolom-berita">
                            <div class="thumbnail-trending">
                                <!-- <%# ini butuh request thumbnail %> -->
                                <img style="width: 286px; height: 171px;" src="<%= angkatbesi.imageBerita %>">
                            </div>
                            <div class="trending-jenis-berita">
                                <!-- <%# ini butuh request kategori %>  -->
                                <a href="/angkatbesi" class="font-2"><span style="color:#5B75EB">Angkat Besi</span></a> | Sport
                            </div>
                            <div class="trending-judul-berita">
                                <!-- <%# ini butuh request judul %> -->
                                <a href="/details/<%= angkatbesi.id %>">
                                    <%= angkatbesi.judulBerita %>
                                </a>
                            </div>
                        </div>
                        <% }) %>

                </div>
            </div>
            <div class="terbaru-section">
                <div class="judul-trending">Terbaru</div>
                <div class="berita-trending">
                    <% berita.slice(0, 3).forEach(angkatbesi=> { %>
                        <div class="kolom-berita">
                            <div class="thumbnail-trending">
                                <%# ini butuh request thumbnail %>
                                    <img style="width: 286px; height: 171px;" src="<%= angkatbesi.imageBerita %>">
                            </div>
                            <div class="trending-jenis-berita">
                                <!-- <%# ini butuh request kategori %> -->
                                    <a href="/angkatbesi" class="font-2"><span style="color:#5B75EB">Angkat Besi</span></a> | Sport
                            </div>
                            <div class="trending-judul-berita">
                                <!-- <%# ini butuh request judul %> -->
                                    <a href="/details/<%= angkatbesi.id %>">
                                        <%= angkatbesi.judulBerita %>
                                    </a>
                            </div>
                        </div>
                        <% }) %>

                </div>
            </div>
        </div>
        <div class="iklan">
            <!-- <%# ini butuh request iklan (?) %> -->
                <img src="/ads/iklan-231x896.png">
        </div>
    </div>
    <!-- <%# ini butuh request iklan (?) %> -->
        <div class="iklan-2"><img src="/ads/iklan-892x228.png"></div>
</body>

<footer>
    <%- include('../partial/footer') %>
</footer>

<script src="http://code.jquery.com/jquery-1.8.3.min.js"></script>

<script>
    let flag = true
    $('#moon_light').click(function () {
        if (flag == true) {
            flag = false
            $('#moon_light').attr('src', '/icon/moon_ic_dark.svg');
            $('link#styles').attr('href', '/css/dark.css');
        } else {
            flag = true
            $('#moon_light').attr('src', '/icon/moon_ic_light.svg');
            $('link#styles').attr('href', '/css/light.css');
        }
    });

    $('.logo').click(function () {
        window.location.href = '/' /* requesting redirect page on logo click */
    })

    $('.logo-footer').click(function () {
        window.location.href = '/' /* requesting redirect page on logo click */
    })

    // PERLU TINJAU ULANG JS UNTUK CLICK LOGIN DAN REGISTER //

    $('.login-button').click(function () {
        window.location.href = '/login'
        return false
    })

    $('.register-button').click(function () {
        window.location.href = '/register'
        return false
    })
</script>

</html>