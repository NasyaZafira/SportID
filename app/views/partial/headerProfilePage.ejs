<!DOCTYPE html>

<html>

<head>
    <title> Welcome, <%# request nama user sebagai title %> </title>
    <link rel="stylesheet" href="/styles/headerProfilePageStyle.css">
</head>

<body>
    <div class="navbar-tray">
        <div class="logo">
            <img src="/styles/img/imgLightMode/logo_light_mode.svg">
        </div>

        <%# highlight category tray request direct page sesuai kategori %>
        <div class="highlight-ctgr">
            <ul>
                <li class="highlight-ctgr-items"> Sepak Bola </li>
                <li class="highlight-ctgr-items"> Bulutangkis </li>
                <li class="highlight-ctgr-items"> Basket </li>
                <li id="select-sizing">
                    <a href="#!"> Lainnya &nbsp; <img src="/styles/img/imgLightMode/arrow_down_right_ic.svg"> </a>
                    <div class="dropdownContain">
                        <div class="dropOut">
                            <div class="triangle"></div>
                            <ul>
                                <li>Voli</li>
                                <li>Panahan</li>
                                <li>Renang</li>
                                <li>Bela Diri</li>
                                <li>Angkat Besi</li>
                                <li>Otomotif</li>
                            </ul>
                        </div>
                    </div>
                </li>
            </ul>
        </div>

        <%# search bar request direct page sesuai yang dicari %>
        <form class="search-bar">
            <input type="text" placeholder="Search...">
            <button type="submit"></button>

            <div class="sublogo">
                <img src="/styles/img/imgLightMode/moon_ic_light.svg" id="moon_light">
            </div>
        </form>

        <div class="access">
            <%# request profile pict from database %>
            <div class="sublogo">
                <img src="/styles/img/imgLightMode/profile_ic_light.svg" width="20px" height="20px"
                    style="border-radius: 50%;">
            </div>
            <select id="profile-option">
                <option selected hidden value="0"> Nama User <%# request nama user from database %> </option>
                <%# request direct page to chosen options %>
                <option value="1">
                    Ubah Profile
                </option>
                <option value="2">
                    Keluar
                </option>
            </select>
        </div>
    </div>
</body>

<script src="http://code.jquery.com/jquery-1.8.3.min.js"></script>

<script>
    let flag = true
    $('#moon_light').click(function () {
        if (flag == true) {
            flag = false
            $('#moon_light').attr('src', 'styles/img/imgLightMode/moon_ic_dark.svg');
        } else {
            flag = true
            $('#moon_light').attr('src', 'styles/img/imgLightMode/moon_ic_light.svg');
        }
    });
</script>

</html>