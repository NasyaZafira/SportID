<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" id="styles" type="text/css" href="/css/admin-user.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css"
        integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
    <style type="text/css">
        body {
            background: #2c2c2c;
        }
    </style>
    <title>New blog post</title>
</head>

<body>
    <div class="sidebar">
        <div class="logo-sidebar" onclick="logo()"></div>
        <div class="bar">
            <a href="/admin" class="bar-item bar-button">Profile</a>
            <a href="/admin/list-user" class="bar-item bar-button">User</a>
            <a href="/admin/list-berita" class="bar-item bar-button">News</a>
            <a href="/logout" class="bar-item bar-button">Logout</a>
        </div>
    </div>
    <div class="admin-user">
        <div class="kolom-atas">
            <div class="pengaturan">Pengaturan Berita</div>
            <div class="profil">
                <div class="logo-profil"></div>
                <div class="nama-profil">
                    <div class="nama-adminnya">
                        <!-- request nama admin -->
                        <%= dbAdmin.nama %>
                    </div>
                    <div class="detail">Lihat detail</div>
                </div>
            </div>
        </div>
        <div class="container-fluid">
            <div class="row">
                <div class="col-11">
                    <div class="kolom-putih">
                        <div class="akun-user">Upload Berita</div>
                        <div class="tabel">
                            <form action="/admin/list-berita/upload" method="POST" enctype="multipart/form-data">
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label for="title" style="margin-top: 32px;">Judul</label>
                                        <input type="text" class="form-control" name="judul" required>
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label for="kategori" style="margin-top: 32px;">Kategori</label>
                                        <input type="text" class="form-control" name="kategori" required>
                                    </div>
                                </div>

                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label>Author</label>
                                        <select class="form-control" id="" name="author">
                                        <option selected hidden>Pilih Author</option>
                                        <% dbAdmin.forEach(rows => { %>
                                        <option><%= rows.nama %></option>
                                        <% }) %>
                                    </select>
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label for="image">Upload Gambar</label>
                                        <input type="url" class="form-control" name="imageUrl" placeholder="Link Gambar">
                                        <!-- <div class="input-group-prepend col-auto" style="margin-top: 10px;">
                                            <div class="input-group-text"><input type="file" name="imageBerita" id="image"
                                                class="form-control-file" style="margin-left: 20px;"></div>
                                        </div> -->
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label for="description">Deskripsi</label>
                                    <textarea name="isi" placeholder="Isi Berita" class="form-control"
                                        style="height: 250px;" required></textarea>
                                </div>

                                <div class="form-group">
                                    <a href="/admin/list-berita" class="btn btn-warning">Batal</a>
                                    <button type="submit" class="btn btn-primary">Simpan</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <script>
        function logo() {
            window.location.href = '/'
        }
    </script>
</body>

</html>