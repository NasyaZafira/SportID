<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/admin-user.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css"
        integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
    <style type="text/css">
        body {
            background: #2c2c2c;
        }
    </style>
    <title>Update Password User</title>
</head>

<body>
    <div class="sidebar">
        <div class="logo-sidebar" onclick="logo()"></div>
        <div class="bar">
            <a href="/admin" class="bar-item bar-button">Profile</a>
            <a href="/admin/list-user" class="bar-item bar-button">User</a>
            <a href="/admin/list-berita" class="bar-item bar-button">News</a>
            <a href="/logout" class="bar-item bar-button">Logout</a>
        </div>
    </div>
    <div class="admin-user">
        <div class="kolom-atas">
            <div class="pengaturan">Pengaturan Berita</div>
            <div class="profil">
                <div class="logo-profil"></div>
                <div class="nama-profil">
                    <div class="nama-adminnya">
                        <!-- request nama admin -->
                        Nama
                    </div>
                    <div class="detail">Lihat detail</div>
                </div>
            </div>
        </div>
        <div class="container-fluid">
            <div class="row">
                <div class="col-11">
                    <div class="kolom-putih">
                        <div class="akun-user">Update Password User</div>
                        <div class="tabel">
                            <form action="/admin/list-user/update/<%= User.id %>/success" method="post">
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label for="email" style="margin-top: 32px;">Email</label>
                                        <input type="text" readonly class="form-control" name="email"
                                            value="<%= User.email %>" required>
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label for="password" style="margin-top: 32px;">Password</label>
                                        <input type="password" class="form-control" name="password"
                                        pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" required>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <a href="/admin/list-user" class="btn btn-warning">Batal</a>
                                    <button type="submit" class="btn btn-primary">Simpan</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <script>
        function logo() {
            window.location.href = '/'
        }
    </script>
</body>
</html>