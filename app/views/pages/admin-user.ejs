<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" id="styles" type="text/css" href="/css/admin-user.css">
  <link rel="stylesheet" href="https://cdn.datatables.net/1.10.13/css/jquery.dataTables.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
  <script src="https://cdn.datatables.net/1.10.13/js/jquery.dataTables.min.js"></script>
</head>

<body>
  <div class="sidebar">
    <div class="logo-sidebar" onclick="logo()"></div>
    <div class="bar">
      <a href="/admin" class="bar-item bar-button">Profile</a>
      <a href="/admin/list-user" class="bar-item bar-button">User</a>
      <a href="/admin/list-berita" class="bar-item bar-button">News</a>
      <a href="/logout" class="bar-item bar-button">Logout</a>
    </div>
  </div>
  <div class="admin-user">
    <div class="kolom-atas">
      <div class="pengaturan">Pengaturan User</div>
      <div class="profil">
        <div class="logo-profil"></div>
        <div class="nama-profil">
          <div class="nama-adminnya">
            <!-- request nama admin -->
            Nama
          </div>
          <div class="detail">Lihat detail</div>
        </div>
      </div>
    </div>
    <div class="container-fluid">
      <div class="row">
        <div class="col-11">
          <div class="kolom-putih">
            <div class="akun-user">Akun User</div>
            <div class="tabel">
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th>ID</th>
                    <th>Nama</th>
                    <th>Email</th>
                    <th>No. Telepon</th>
                    <th>Kata Sandi</th>
                    <th>Created At</th>
                    <th>Update At</th>
                    <th></th>
                  </tr>
                </thead>
                <tbody>
                  <% dbUser.forEach((row) => { %>
                  <tr>
                    <td><%= row.id %></td>
                    <td><%= row.name %></td>
                    <td><%= row.email %></td>
                    <td><%= row.phoneNumber %></td>
                    <td><%= row.password %></td>
                    <td><%= row.createdAt %></td>
                    <td><%= row.updatedAt %></td>
                    <td>
                      <a href="/admin/list-user/update/<%= row.id %>" type="button" class="btn btn-success btn-sm">Edit</a>
                      <a href="/admin/list-user/delete/<%= row.id %>" type="button" class="btn btn-danger btn-sm">Hapus</a>
                    </td>
                  </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    function logo() {
        window.location.href = '/'
    }
  </script>
</body>

</html>